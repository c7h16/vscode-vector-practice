{
"version": "2.0.0",
"tasks": [
    {
        "label": "cmake",
        "type": "shell",
        "options": {
            "cwd": "${workspaceRoot}/build"
        },
        "command": "cmake ..",
        "problemMatcher": [],

    },
    {
        "label": "make",
        "type": "shell",
        "options": 
            {"cwd": "${workspaceRoot}/build"},
            "dependsOn": ["cmake"],
        "command": "make",
        "group": {
            "kind": "build",
            "isDefault": true
        }
    }
]
}